// Base class: Person
class Person {
  constructor(name, age) {
    this.name = name;
    this.age = age;
  }

  displayInfo() {
    console.log(`Name: ${this.name}, Age: ${this.age}`);
  }
}

// Subclass: Student
class Student extends Person {
  constructor(name, age, course) {
    super(name, age); // call parent constructor
    this.course = course;
  }

  // override displayInfo
  displayInfo() {
    console.log(
      `Student - Name: ${this.name}, Age: ${this.age}, Course: ${this.course}`
    );
  }
}

// Subclass: Teacher
class Teacher extends Person {
  constructor(name, age, subject) {
    super(name, age);
    this.subject = subject;
  }

  // override displayInfo
  displayInfo() {
    console.log(
      `Teacher - Name: ${this.name}, Age: ${this.age}, Subject: ${this.subject}`
    );
  }
}

// --- Demonstration ---

const student1 = new Student("Alice", 20, "Computer Science");
const teacher1 = new Teacher("Mr. Smith", 45, "Mathematics");

// Calling methods
student1.displayInfo(); // Student - Name: Alice, Age: 20, Course: Computer Science
teacher1.displayInfo(); // Teacher - Name: Mr. Smith, Age: 45, Subject: Mathematics
